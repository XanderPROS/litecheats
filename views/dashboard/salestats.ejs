<%- include("./partials/headerfirst") %>
<title>Sales stats</title>
<%- include("./partials/headersecond") %>
    <div class="container-fluid productTab vf">
        <div class="row">
            <%sortedArrayDates.forEach(function(order){%>
                <div class="col-12" style="word-break: break-all;">
                    <div class="card border-light mb-3">
                      <div class="card-body text-dark" style="border: 1px solid rgba(0, 0, 0, 0.068);">
                        <h5 class="card-title" style="font-weight: 700;"><%=moment(order.date).format('LL')%></h5>
                        <%delete order.date%>
                        <h6 class="card-subtitle mb-2 text-muted" style="font-weight: 700;">Statistics</h6>
                        <p class="card-text">
                            <%for(prod in order){%>
                                <h6 class="card-subtitle mb-2 text-muted" style="font-weight: 700;"><%=prod%></h6>
                                <ul style="list-style-type:none;max-height:500px;overflow-y: scroll;">
                                    <li>
                                        <code class="d-block" style="background-color: #f2f6f9;padding:6px;border-radius: 0 ;color: #222974;">
                                            
                            
                                                
                                                <%for(type in order[prod]){%>
                                                    <div><%=type%> : <%=order[prod][type]%></div>
                                                <%}%>
                                                
                                            
                                        </code>
                                        
                                        
                                    </li>
                                </ul>
                                <%}%>
                        </p>
                        
                      </div>
                    </div>
                    </div>
            <%})%>
            </div>
    </div>
</div>
<% if (pages && pages > 0) { %>
    <nav class="vxf hjk" aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
            <li><a class="page-link" href="/myStats">First</a></li>
            <% } %>
     
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">Previous</a></li>
            <% } else { %>
            <li><a class="page-link" href="/myStats?page=<%= Number(current) - 1 %>">Previous</a></li>
            <% } %>
     
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li><a class="page-link" href="/myStats?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Next</a></li>
            <% } else { %>
            <li><a class="page-link" href="/myStats?page=<%= Number(current) + 1 %>">Next</a></li>
            <% } %>
     
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
            <li><a class="page-link" href="/myStats?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    </nav>
    <% } %>
<%- include("./partials/footer") %>